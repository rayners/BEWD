doctype html
html(lang="en", ng-app="bewd.tictactoe.board")
    head
      include ./includes/bower_bootstrap.jade
      title User Login
    body  
      include ./includes/flash.jade
      .container
        h1 User Login
        form(name="login", action="/login", method="post")
            .form-group
              label Username
              input.form-control(type="text" name="username")
            .form-group
              label Password
              input.form-control(type="password" name="password")
            button.btn.btn-detault(type="submit") Login
            br
            br
          p Need to register? 
          a(href="/register") Register new user!
